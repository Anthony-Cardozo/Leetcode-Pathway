class Solution {
    public boolean isPalindrome(String s) {
        s = s.toLowerCase().replaceAll("[^a-z0-9]", "");
        int i = 0;
        while(i < s.length() / 2) {
            if(s.charAt(i) != s.charAt(s.length() - 1 - i))
                return false;
            i++;
        }
        return true;
    }
}

//Replace all non letters and numbers with empty strings then with two pointers (one at front and back)
//if they don't equal each other then it's not a palindrome